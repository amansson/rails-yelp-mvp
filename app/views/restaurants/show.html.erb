<h2><%= @restaurant.name %></h2>
<h4><%= @restaurant.category %></h4>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f|  %>
  <%= f.input :content  %>
  <%= f.input :rating  %>
  <%= f.submit %>
<% end %>